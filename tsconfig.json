{
  "compilerOptions": {
    "types": ["mocha"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2015"],
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "noEmit": true,

    // Fixes switchboard error TS2304: Cannot find name 'Long'.
    // Skip type checking all .d.ts files.
    "skipLibCheck": true                                 
  }
}
